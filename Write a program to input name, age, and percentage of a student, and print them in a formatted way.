#include <stdio.h>
int main() {
    char name[50];
    int age;
    float percentage;


    printf("Enter your name: ");
    scanf("%s", name);   // will take single word as name


    printf("Enter your age: ");
    scanf("%d", &age);


    printf("Enter your percentage: ");
    scanf("%f", &percentage);


    printf("\n--- Student Details ---\n");
    printf("Name       : %s\n", name);
    printf("Age        : %d\n", age);
    printf("Percentage : %.2f%%\n", percentage);
    return 0;
}


