
#include <stdio.h>
#define PI 3.14159   // symbolic constant for Pi


int main() {
    float radius, area;
    // input radius
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);


    // calculate area
    area = PI * radius * radius;


    // output result
    printf("Area of the circle = %.2f\n", area);


    return 0;
}
